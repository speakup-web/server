{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "paths": {
      "@Applications/*": ["./Applications/*"],
      "@Commons/*": ["./Commons/*"],
      "@Domains/*": ["./Domains/*"],
      "@Infrastructures/*": ["./Infrastructures/*"],
      "@Interfaces/*": ["./Interfaces/*"]
    },
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/Commons/types", "./node_modules/@types"],
    "esModuleInterop": true
  },
  "include": ["src/**/*", "migrations/*", "seeder/*", "test/**/*"]
}
