{
  "name": "speakup-api",
  "version": "1.0.0",
  "main": "src/app.ts",
  "type": "commonjs",
  "scripts": {
    "start": "ts-node src/app.ts",
    "start:dev": "nodemon src/app.ts",
    "test:cov": "jest src -i --watchAll --coverage",
    "test:watch": "jest src -i --watch",
    "migrate": "node-pg-migrate --tsconfig tsconfig.json --envPath .env.development.local",
    "migrate:test": "node-pg-migrate --tsconfig tsconfig.json --envPath .env.test.local",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "license": "ISC",
  "dependencies": {
    "@hapi/hapi": "^21.3.7",
    "@hapi/jwt": "^3.2.0",
    "awilix": "^10.0.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "http-status": "^1.7.4",
    "joi": "^17.12.2",
    "nanoid": "^3.3.7",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "node-pg-migrate": "^6.2.2",
    "nodemon": "^3.1.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  }
}
