{
  "name": "speakup-api",
  "version": "1.0.0",
  "main": "src/server.ts",
  "type": "commonjs",
  "scripts": {
    "build": "tsc && sed -i '2i\\require(\"module-alias/register\");' dist/src/server.js",
    "start": "node dist/src/server.js",
    "start:dev": "NODE_ENV=development nodemon -r tsconfig-paths/register src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "migrate": "node-pg-migrate --tsconfig tsconfig.json --envPath .env.development.local",
    "migrate:test": "node-pg-migrate --tsconfig tsconfig.json --envPath .env.test.local",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --ext .ts --fix .",
    "format": "prettier --write \"src/**/*.ts\" \"migrations/**/*.ts\" \"test/**/*.test.ts\"",
    "seed": "ts-node seeder"
  },
  "license": "ISC",
  "dependencies": {
    "awilix": "^10.0.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-winston": "^4.2.0",
    "http-status": "^1.7.4",
    "jose": "^5.2.3",
    "module-alias": "^2.2.3",
    "nanoid": "^3.3.7",
    "pg": "^8.11.3",
    "winston": "^3.13.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "node-pg-migrate": "^6.2.2",
    "nodemon": "^3.1.0",
    "prettier": "3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.3.x"
  },
  "_moduleAliases": {
    "@Applications": "dist/src/Applications",
    "@Commons": "dist/src/Commons",
    "@Domains": "dist/src/Domains",
    "@Infrastructures": "dist/src/Infrastructures",
    "@Interfaces": "dist/src/Interfaces"
  }
}
